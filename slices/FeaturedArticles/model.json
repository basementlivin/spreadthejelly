{
  "id": "featured_articles",
  "type": "SharedSlice",
  "name": "FeaturedArticles",
  "description": "FeaturedArticles",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Default",
      "imageUrl": "",
      "primary": {
        "articles": {
          "type": "Group",
          "config": {
            "label": "Articles",
            "repeat": true,
            "fields": {
              "article": {
                "type": "Link",
                "config": {
                  "label": "Article",
                  "select": "document",
                  "customtypes": [
                    "blog_article",
                    "jelly_loves_article",
                    "ask_jelly_article"
                  ]
                }
              },
              "article_title": {
                "type": "Text",
                "config": {
                  "label": "Article Title",
                  "placeholder": ""
                }
              },
              "article_subtitle": {
                "type": "Text",
                "config": {
                  "label": "Article Subtitle",
                  "placeholder": ""
                }
              },
              "featured_quote": {
                "type": "Text",
                "config": {
                  "label": "Featured Quote",
                  "placeholder": "Optional! This will only appear if you select the \"Featured Quote\" card style."
                }
              },
              "card_style": {
                "type": "Select",
                "config": {
                  "label": "Card Style",
                  "placeholder": "",
                  "options": [
                    "Full Bleed Image",
                    "Blob Mask 1",
                    "Blob Mask 2",
                    "Inset Image Vertical",
                    "Inset Image Horizontal",
                    "Featured Quote"
                  ],
                  "default_value": "Full Bleed Image"
                }
              },
              "card_bg_color": {
                "type": "Select",
                "config": {
                  "label": "Card Background Color",
                  "placeholder": "",
                  "options": [
                    "Black",
                    "White",
                    "Sunset",
                    "Ember",
                    "Soft Pink",
                    "Light Chartreuse",
                    "Sky Blue"
                  ],
                  "default_value": "Black"
                }
              },
              "card_hover_color": {
                "type": "Select",
                "config": {
                  "label": "Card Hover Color",
                  "placeholder": "",
                  "options": [
                    "Black",
                    "White",
                    "Sunset",
                    "Ember",
                    "Soft Pink",
                    "Light Chartreuse",
                    "Sky Blue"
                  ],
                  "default_value": "Black"
                }
              },
              "card_text_color": {
                "type": "Select",
                "config": {
                  "label": "Card Text Color",
                  "placeholder": "",
                  "options": [
                    "White",
                    "Black"
                  ],
                  "default_value": "White"
                }
              },
              "card_text_align": {
                "type": "Select",
                "config": {
                  "label": "Card Text Align",
                  "placeholder": "",
                  "options": [
                    "Bottom",
                    "Top"
                  ],
                  "default_value": "Bottom"
                }
              },
              "scale": {
                "type": "Boolean",
                "config": {
                  "label": "Scale Full-Bleed Image on Hover?",
                  "placeholder_false": "nope, don't scale the image",
                  "placeholder_true": "yes, do it",
                  "default_value": false
                }
              }
            }
          }
        }
      },
      "items": {}
    }
  ]
}